<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<project name="BuildJar" default="refresh" basedir=".">
	<property name="project" value="Webshop" />
	<property name="sourceProjectFilePath" value="../com.home.web" />
	<property name="targetJarFilePath" value="WebContent/WEB-INF/lib/WebFramework.jar" />
	<target name="createJars">
		<echo message="Start build process for ${project}" />
		<delete file="${targetJarFilePath}" />
		<jar jarfile="${targetJarFilePath}">
			<fileset dir="${sourceProjectFilePath}/WebContent" includes="**/*.*" />
			<fileset dir="${sourceProjectFilePath}/JavaSource" includes="**/*.*" />
			<fileset dir="${sourceProjectFilePath}/build/classes" includes="**/*.*" />
		</jar>
	</target>
	<target name="refresh" depends="createJars">
		<eclipse.refreshLocal resource="${project}" depth="infinite"/>
	</target>
</project>